#
# This file MUST be edited with the 'visudo' command as root.
#
# Please consider adding local content in /etc/sudoers.d/ instead of
# directly modifying this file.
#
# See the man page for details on how to write a sudoers file.
#
Defaults	env_reset
Defaults	mail_badpass
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/bin/quickbox/"

# Host alias specification

# User alias specification

# Cmnd alias specification
Cmnd_Alias   CLEANMEM = /proc/sys/vm/drop_caches
Cmnd_Alias   SYSCMNDS = /usr/local/bin/quickbox/system/
Cmnd_Alias   PLUGINCMNDS = /usr/local/bin/quickbox/plugin/install/, /usr/local/bin/quickbox/plugin/remove/
Cmnd_Alias   PACKAGECMNDS = /usr/local/bin/quickbox/package/install/, /usr/local/bin/quickbox/package/remove/
Cmnd_Alias   GENERALCMNDS = /usr/bin/ifstat, /usr/bin/vnstat, /usr/sbin/repquota, /bin/grep, /usr/bin/awk, /etc/init.d/apache2 restart, /usr/bin/pkill, /usr/bin/killall

# User privilege specification
root	ALL=(ALL:ALL) ALL
www-data     ALL = (ALL) NOPASSWD: CLEANMEM, SYSCMNDS, PLUGINCMNDS, PACKAGECMNDS, GENERALCMNDS

# Members of the admin group may gain root privileges
%admin ALL=(ALL) ALL

# Allow members of group sudo to execute any command
%www-data     ALL = (ALL) NOPASSWD: CLEANMEM, SYSCMNDS, PLUGINCMNDS, PACKAGECMNDS, GENERALCMNDS
%sudo	ALL=(ALL:ALL) ALL

# See sudoers(5) for more information on "#include" directives:

#includedir /etc/sudoers.d
